<td>
  {{#if socialStyle}}
    {{raw "list/topic-list-title" topic=topic socialStyle=socialStyle mobileView=site.mobileView}}
    {{#if showThumbnail}}
      {{raw "list/topic-thumbnail" topic=topic thumbnails=thumbnails}}
    {{/if}}
  {{else}}
    {{#if showThumbnail}}
      {{raw "list/topic-thumbnail" topic=topic thumbnails=thumbnails}}
    {{else}}
      <div class='pull-left'>
        <a href="{{topic.lastPostUrl}}">{{avatar topic.lastPoster imageSize="large"}}</a>
      </div>
    {{/if}}
  {{/if}}

  <div class='topic-details'>
    {{#unless socialStyle}}
      <div class='main-link'>
        {{raw "list/topic-list-title" topic=topic showTopicPostBadges=showTopicPostBadges mobileView=site.mobileView}}
      </div>
      <div class='pull-right'>
        {{raw "list/post-count-or-badges" topic=topic postBadgesEnabled=showTopicPostBadges}}
      </div>
    {{/unless}}

    {{#if expandPinned}}
      {{raw "list/topic-excerpt" topic=topic}}
    {{/if}}

    {{#unless socialStyle}}
      {{raw "list/topic-category" category=topic.category}}
      {{#if topic.tags}}
        <div class='discourse-tags'>
        {{#each topic.visibleListTags as |tag|}}
          {{discourse-tag tag}}
        {{/each}}
        </div>
      {{/if}}

      {{#if showActions}}
        {{raw "list/topic-actions" likeCount=likeCount topicActions=topicActions}}
      {{/if}}

      <div class='num activity last'>
        <span class="age activity" title="{{topic.bumpedAtTitle}}"><a href="{{topic.lastPostUrl}}">{{format-date topic.bumpedAt format="tiny" noTitle="true"}}</a></span>
      </div>
    {{/unless}}
  </div>

  {{#if socialStyle}}
    <div class='main-link-footer'>
      {{raw "list/topic-meta" title=view.title likesHeat=view.likesHeat topic=topic}}
      {{#if showActions}}
        {{raw "list/topic-actions" likeCount=likeCount topicActions=topicActions}}
      {{/if}}
      {{raw-plugin-outlet name="topic-list-after-title"}}
    </div>
  {{/if}}
</td>
